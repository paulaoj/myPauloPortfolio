<script>
  //AJAX code
  const dataResult = document.getElementById('dataResult')
  document.querySelector('.post-bottom').addEventListener('submit', (e) => {

    //Not load webpage
    e.preventDefault()

    //Catch infos to send to backEnd
    const data = {
      nomeuser: document.getElementById('name').value,
      emailuser: document.getElementById('email').value,
      messageuser: document.getElementById('message').value

    }

    //Create a fetch to connect 
    fetch('/sendmessage', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data)
    })
      .then(Response => {
        if (Response.ok) {
          Response.json().then(data => {
            var newElement = document.createElement('div')
            newElement.innerHTML = `
            <div class='successmsg'>
              <button>X</button>
              <p>${data.message}</p>
            </div>
            `
            dataResult.append(newElement)
            dataResult.style.display = 'block'
          })
        }
        else {
          Response.json().then(data => {
            var newElement = document.createElement('div')
            newElement.innerHTML = `
            <div class='errormsg'>
              <button>X</button>
              <p>${data.message}</p>
            </div>
            `
            dataResult.append(newElement)
            dataResult.style.display = 'block'
          })
        }
      })
  })
</script>